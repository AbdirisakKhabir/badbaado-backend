generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ========================================
// USER MANAGEMENT MODELS
// ========================================

// Add to your Prisma schema
model User {
  id             Int       @id @default(autoincrement())
  password       String
  fullName       String
  phone          String    @unique
  gender         Gender
  age            Int
  location       String
  bloodType      BloodType
  role           UserRole  @default(USER) // Add this line
  isActive       Boolean   @default(true)
  isEligible     Boolean   @default(true)
  totalDonations Int       @default(0)
  lastDonation   DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deactivatedAt  DateTime?

  // Relations
  bloodRequests     BloodRequest[]
  acceptedDonations Donation[]
  userHistory       UserHistory[]
  notifications     UserNotification[]

  @@map("users")
}

// Add to your Prisma schema
model Hospital {
  id            Int      @id @default(autoincrement())
  hospital_name String
  phone         String   @unique
  location      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Add this enum to your Prisma schema
enum UserRole {
  USER
  ADMIN
}

// ========================================
// BLOOD REQUEST MODELS
// ========================================

model BloodRequest {
  id           Int           @id @default(autoincrement())
  userId       Int
  fullName     String
  phone        String
  gender       Gender
  age          Int
  location     String
  bloodType    BloodType
  hospital     String?
  urgency      UrgencyLevel
  description  String?
  status       RequestStatus @default(PENDING)
  maxDonors    Int           @default(5)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  approvedAt   DateTime?
  rejectedAt   DateTime?
  completedAt  DateTime? // ADD THIS FIELD
  adminId      Int?
  rejectReason String?

  // Notification tracking fields
  donorsNotified      Int       @default(0)
  totalEligibleDonors Int       @default(0)
  lastNotifiedAt      DateTime?

  // Relations
  user          User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
  donations     Donation[]
  notifications BloodRequestNotification[]

  @@map("blood_requests")
}

model Donation {
  id          Int            @id @default(autoincrement())
  requestId   Int
  donorId     Int
  status      DonationStatus @default(PENDING)
  acceptedAt  DateTime?
  completedAt DateTime?
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  bloodRequest BloodRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  donor        User         @relation(fields: [donorId], references: [id], onDelete: Cascade)

  @@map("donations")
}

// ========================================
// NOTIFICATION MODELS
// ========================================

model AdminNotification {
  id          Int                    @id @default(autoincrement())
  adminId     Int
  title       String
  message     String
  targetType  NotificationTargetType
  targetValue String?
  priority    NotificationPriority   @default(NORMAL)
  status      NotificationStatus     @default(DRAFT)
  sentAt      DateTime?
  recipients  Int?
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt

  // Relations
  userNotifications UserNotification[]

  @@map("admin_notifications")
}

model UserNotification {
  id             Int                  @id @default(autoincrement())
  userId         Int
  notificationId Int?
  title          String
  message        String
  type           UserNotificationType
  priority       NotificationPriority @default(NORMAL)
  isRead         Boolean              @default(false)
  readAt         DateTime?
  createdAt      DateTime             @default(now())

  // Relations
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  adminNotification AdminNotification? @relation(fields: [notificationId], references: [id])

  @@map("user_notifications")
}

model BloodRequestNotification {
  id        Int      @id @default(autoincrement())
  requestId Int
  message   String
  type      String
  createdAt DateTime @default(now())

  // Relations
  bloodRequest BloodRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@map("blood_request_notifications")
}

// ========================================
// SYSTEM SETTINGS MODELS
// ========================================

model SystemSetting {
  id          Int             @id @default(autoincrement())
  key         String          @unique
  value       String
  description String?
  category    SettingCategory
  updatedBy   Int
  updatedAt   DateTime        @default(now())

  @@map("system_settings")
}

// ========================================
// USER HISTORY & ACTIVITY MODELS
// ========================================

model UserHistory {
  id           Int         @id @default(autoincrement())
  userId       Int
  type         HistoryType
  action       String
  bloodType    BloodType?
  location     String?
  date         DateTime
  status       String?
  contactName  String?
  contactPhone String?
  createdAt    DateTime    @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_history")
}

// ========================================
// ENUMS
// ========================================

enum Gender {
  MALE
  FEMALE
}

enum BloodType {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

enum UrgencyLevel {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  CANCELLED
}

enum DonationStatus {
  PENDING
  ACCEPTED
  CONFIRMED
  COMPLETED
  REJECTED
  CANCELLED
}

enum NotificationTargetType {
  ALL_USERS
  BY_LOCATION
  BY_BLOOD_TYPE
  INDIVIDUAL_USER
}

enum NotificationPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum NotificationStatus {
  DRAFT
  SENT
  SCHEDULED
}

enum UserNotificationType {
  SYSTEM
  BLOOD_REQUEST
  DONATION_UPDATE
  ADMIN_MESSAGE
}

enum SettingCategory {
  REQUEST_MANAGEMENT
  DONATION_SETTINGS
  SYSTEM_CONFIGURATION
  SECURITY_PRIVACY
  NOTIFICATIONS
}

enum HistoryType {
  INCOMING
  OUTGOING
  SYSTEM
}
